<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        tools:context=".MainActivity">

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:elevation="4dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.95">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/clearBTN"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/circle"
                    android:onClick="clear"
                    android:text="@string/clear"
                    android:textSize="35sp"
                    app:backgroundTint="#a3a6a3" />

                <Button
                    android:id="@+id/paroBTN"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/circle"
                    android:onClick="paro"
                    android:text="@string/paro"
                    android:textSize="35sp"
                    app:backgroundTint="#a3a6a3" />

                <Button
                    android:id="@+id/parcBTN"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/circle"
                    android:onClick="parc"
                    android:text="@string/parc"
                    android:textSize="35sp"
                    app:backgroundTint="#a3a6a3" />

                <Button
                    android:id="@+id/divideBTN"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/circle"
                    android:onClick="divide"
                    android:text="@string/divide"
                    android:textSize="35sp"
                    app:backgroundTint="#FF9600" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/sevenBTN"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/circle"
                    android:onClick="seven"
                    android:text="@string/seven"
                    android:textSize="35sp"
                    app:backgroundTint="#313131" />

                <Button
                    android:id="@+id/eightBTN"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/circle"
                    android:onClick="eight"
                    android:text="@string/eight"
                    android:textSize="35sp"
                    app:backgroundTint="#313131" />

                <Button
                    android:id="@+id/nineBTN"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/circle"
                    android:onClick="nine"
                    android:text="@string/nine"
                    android:textSize="35sp"
                    app:backgroundTint="#313131" />

                <Button
                    android:id="@+id/multiplyBTN"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/circle"
                    android:onClick="multiply"
                    android:text="@string/multiply"
                    android:textSize="35sp"
                    app:backgroundTint="#FF9600" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/fourBTN"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/circle"
                    android:onClick="four"
                    android:text="@string/four"
                    android:textSize="35sp"
                    app:backgroundTint="#313131" />

                <Button
                    android:id="@+id/fiveBTN"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/circle"
                    android:onClick="five"
                    android:text="@string/five"
                    android:textSize="35sp"
                    app:backgroundTint="#313131" />

                <Button
                    android:id="@+id/sixBTN"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/circle"
                    android:onClick="six"
                    android:text="@string/six"
                    android:textSize="35sp"
                    app:backgroundTint="#313131" />

                <Button
                    android:id="@+id/subtractBTN"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/circle"
                    android:onClick="subtract"
                    android:text="@string/subtract"
                    android:textSize="35sp"
                    app:backgroundTint="#FF9600" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/oneBTN"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/circle"
                    android:onClick="one"
                    android:text="@string/one"
                    android:textSize="35sp"
                    app:backgroundTint="#313131" />

                <Button
                    android:id="@+id/twoBTN"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/circle"
                    android:onClick="two"
                    android:text="@string/two"
                    android:textSize="35sp"
                    app:backgroundTint="#313131" />

                <Button
                    android:id="@+id/threeBTN"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/circle"
                    android:onClick="three"
                    android:text="@string/three"
                    android:textSize="35sp"
                    app:backgroundTint="#313131" />

                <Button
                    android:id="@+id/addBTN"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/circle"
                    android:onClick="add"
                    android:text="@string/add"
                    android:textSize="35sp"
                    app:backgroundTint="#FF9600" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/expBTN"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/circle"
                    android:onClick="exp"
                    android:text="@string/exp"
                    android:textSize="35sp"
                    app:backgroundTint="#313131" />

                <Button
                    android:id="@+id/zeroBTN"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/circle"
                    android:onClick="zero"
                    android:text="@string/zero"
                    android:textSize="35sp"
                    app:backgroundTint="#313131" />

                <Button
                    android:id="@+id/pointBTN"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/circle"
                    android:onClick="point"
                    android:text="@string/point"
                    android:textSize="35sp"
                    app:backgroundTint="#313131" />

                <Button
                    android:id="@+id/equalsBTN"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/circle"
                    android:onClick="eql"
                    android:text="@string/equals"
                    android:textSize="35sp"
                    app:backgroundTint="#FF9600" />
            </TableRow>
        </TableLayout>

        <EditText
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:autofillHints="false"
            android:backgroundTint="#FFFFFF"
            android:elevation="2dp"
            android:gravity="end"
            android:inputType="none"
            android:shadowColor="#FFFFFF"
            android:text=""
            android:textAlignment="textEnd"
            android:textSize="60sp"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="LabelFor"
            tools:text="" />

        <ImageButton
            android:id="@+id/backspaceBTN"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/circle"
            android:elevation="4dp"
            android:contentDescription="@string/backspace"
            android:onClick="backspace"
            android:textSize="50sp"
            app:backgroundTint="#339933"
            app:layout_constraintBottom_toTopOf="@+id/tableLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/backspace" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
